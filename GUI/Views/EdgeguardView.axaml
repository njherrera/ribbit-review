<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="450"
			 xmlns:vm="using:GUI.ViewModels"
			 x:Class="GUI.Views.EdgeguardView"
			 x:DataType="vm:EdgeguardViewModel">

	<Grid Grid.ColumnDefinitions="300,100,100" Grid.RowDefinitions="225,225" Margin="10,20,10,5">
			<TextBlock Grid.Column="0" Grid.Row="0" TextWrapping="Wrap">Edgeguarding player (make sure to fill in your connect code!):</TextBlock>
			<RadioButton Grid.Column="1" Grid.Row="0" GroupName="Edgeguarding player" Content="Me" Command="{Binding ConvertingPlayerToMeCommand}"/>
			<RadioButton Grid.Column="2" Grid.Row="0" GroupName="Edgeguarding player" Content="Opponent" Command="{Binding ConvertingPlayerToOppCommand}"/>
		<StackPanel Orientation="Horizontal" Grid.Row="1">
			<TextBlock Grid.Column="0" Grid.Row="1">Edgeguard killed?</TextBlock>
			<RadioButton Grid.Column="1" Grid.Row="1" GroupName="Edgeguard killed" Content="Yes" Command="{Binding ConversionDidKillCommand}"/>
			<RadioButton Grid.Column="2" Grid.Row="1" GroupName="Edgeguard killed" Content="No" Command="{Binding ConversionDidNotKillCommand}"/>
		</StackPanel>
	</Grid>
</UserControl>
